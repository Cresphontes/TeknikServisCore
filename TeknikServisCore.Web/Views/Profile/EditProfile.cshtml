@model TeknikServisCore.Models.ViewModels.ProfileEditViewModel

@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">

            <form class="form-horizontal" asp-controller="Profile" asp-action="EditProfile" asp-antiforgery="true" method="post">
                <div asp-validation-summary="All" class="text-danger">

                </div>
                <h2>@TempData["Message"]</h2>


                <div class="form-group row">
                    <label class="control-label col-md-3" asp-for="@Model.Username">Kullanıcı Adı </label>
                    <div class="col-md-9">
                        <input class="form-control" type="text" asp-for="@Model.Username" />
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3" asp-for="@Model.Name">İsim</label>
                    <div class="col-md-9">
                        <input class="form-control" type="text" asp-for="@Model.Name" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3" asp-for="@Model.Surname">Soyisim</label>
                    <div class="col-md-9">
                        <input class="form-control" type="text" asp-for="@Model.Surname" />
                        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3" asp-for="@Model.Email">Email</label>
                    <div class="col-md-9">
                        <input class="form-control" type="email" asp-for="@Model.Email" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="control-label col-md-3" asp-for="@Model.PhoneNumber">Telefon</label>
                    <div class="col-md-9">
                        <input class="form-control" type="text" asp-for="@Model.PhoneNumber" />
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3" asp-for="@Model.BirthDate">Doğum Tarihi</label>
                    <div class="col-md-9">
                        <input class="form-control" type="date" asp-for="@Model.BirthDate" />
                        <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-3" asp-for="@Model.Address">Adres</label>
                    <div class="col-md-9">
                        <input class="form-control" type="text" asp-for="@Model.Address" />
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                </div>


                <input id="submit" class="btn btn-warning " type="submit" value="Güncelle" />

            </form>

        </div>
        <div class="col-md-6">

            <partial name="~/Views/Shared/Partials/_EditPasswordPartial.cshtml" />

        </div>
    </div>
</div>

